@model IEnumerable<MikeBugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Submitter"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table id ="thetable"class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignedToUser.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerUser.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriorities.PriorityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatus.StatusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketTypes.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPriorities.PriorityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketStatus.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketTypes.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@model IEnumerable<MikeBugTracker.Models.Project>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!-- Main content -->
<section class="content">
    @if (User.IsInRole("Admin"))
    {
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    }
    
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Projects</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Project Name
                        </th>
                        <th style="width: 30%">
                            Team Members
                        </th>
                        <th>
                            Project Progress
                        </th>
                        <th style="width: 8%" class="text-center">
                            Status
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
            <tbody>
                <tr>
                    <td>
                        #
                    </td>
                    <td>
                        <a>
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                        <br />
                        <small>
                            @Html.DisplayFor(modelItem => item.Description)
                        </small>
                    </td>
                    <td>
                        <ul class="list-inline">
                            @foreach (var user in item.Users)
                            {
                            <li class="list-inline-item">
                                @user.FullName <img alt="" class="table-avatar" src="@user.Avatar">
                            </li>
                            }                           
                            
                        </ul>
                    </td>
                    <td class="project_progress">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                            </div>
                        </div>
                        <small>
                            57% Complete
                        </small>
                    </td>
                    <td class="project-state">
                        <span class="badge badge-success">Success</span>
                    </td>
                    <td class="project-actions text-right">
                        <a class="btn btn-primary btn-sm" href=@Url.Action("Details","Projects", new { id = item.Id })>
                            <i class="fas fa-folder">
                            </i>
                            View
                        </a>
                        
                        <a class="btn btn-info btn-sm" href=@Url.Action("Edit","Projects", new { id = item.Id })>
                            <i class="fas fa-pencil-alt">
                            </i>
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm" href=@Url.Action("Delete","Projects", new { id = item.Id })>
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                    </td>
                </tr>
            </tbody>
                }
                
            </table>
        </div>
    </div>
</section>























                    

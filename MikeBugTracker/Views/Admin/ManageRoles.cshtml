@model IEnumerable<MikeBugTracker.Models.ManageRolesViewModel>
@{
    ViewBag.Title = "ManageRoles";
}

<h2>ManageRoles</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12">
                    @Html.ListBox("UserIds", null, new { @class="cntrlWide"})
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.DropDownList("Role", null,"--Select Role--", new { @class="cntrlWide"})
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                <button type="submit" class="btn btn-primary cntrlWide">Submit</button>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-12">Multi Select List</div>
        </div>
        <div class="row">
            <div class="col-md-12">Select List</div>
        </div>
        <div class="row">
            <div class="col-md-12">Button</div>
        </div>
    </div>
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    
                    @Html.DisplayName("User Name")
                </th>
                <th>
                    @Html.DisplayName("Role")
                </th>
                <th></th>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>                       
                        @Html.DisplayFor(model => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => user.RoleName)
                    </td>
                    <td>
                       
                    </td>
                </tr>
            }

        </table>






    </div>
</div>